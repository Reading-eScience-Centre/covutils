{
  "name": "covutils",
  "version": "0.2.6",
  "license": "BSD-3-Clause",
  "description": "Utilities for creating, transforming, and handling Coverage Data objects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Reading-eScience-Centre/covutils.git"
  },
  "bugs": {
    "url": "https://github.com/Reading-eScience-Centre/covutils/issues"
  },
  "author": {
    "name": "Maik Riechert"
  },
  "main": "lib/main.js",
  "files": [
    "lib/",
    "covutils.*"
  ],
  "dependencies": {
    "ndarray": "^1.0.18",
    "point-in-big-polygon": "^2.0.0",
    "topojson": "^1.6.26"
  },
  "scripts": {
    "docs": "esdoc -c esdoc.json",
    "style": "standard",
    "transpile": "babel -d lib/ src/",
    "test": "npm run transpile && npm run testnode && npm run testkarma",
    "testnode": "mocha --recursive --compilers js:babel-register",
    "testkarma": "karma start --single-run",
    "karma": "karma start",
    "saucelabs": "karma start karma.conf-ci.js",
    "browserdist": "browserify lib/main.js -s CovUtils -o covutils.src.js",
    "postbrowserdist": "uglifyjs covutils.src.js -c unused=false -o covutils.min.js --source-map covutils.min.js.map",
    "build": "npm run transpile && npm run browserdist",
    "prepublish": "npm run build"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "karma.conf.js",
      "karma.conf-ci.js",
      "test/"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^4.1.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^11.0.1",
    "core-js": "^2.0.2",
    "delaunay-triangulate": "^1.1.6",
    "dup": "^1.0.0",
    "esdoc": "^0.4.1",
    "esdoc-importpath-plugin": "0.0.1",
    "finalhandler": "^0.4.1",
    "karma": "^0.13.9",
    "karma-browserify": "^4.4.2",
    "karma-chrome-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-sauce-launcher": "^0.2.14",
    "mocha": "^2.2.5",
    "serve-static": "^1.10.0",
    "standard": "^5.1.0",
    "uglify-js": "^2.4.24",
    "xndarray": "^0.3.0"
  }
}
